{
  "name": "neon-agent",
  "displayName": "Neon Agent",
  "description": "AI-powered coding agent extension for VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "AI"
  ],
  "activationEvents": [],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "neon-agent.activate",
        "title": "Activate Neon Agent"
      },
      {
        "command": "neon-agent.chat",
        "title": "Open Neon Agent Chat"
      },
      {
        "command": "neon-agent.analyze",
        "title": "Analyze Code with Neon Agent"
      }
    ],
    "keybindings": [
      {
        "command": "neon-agent.chat",
        "key": "ctrl+shift+n",
        "mac": "cmd+shift+n"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "neon-agent.analyze",
          "group": "neon-agent"
        }
      ],
      "editor/context": [
        {
          "command": "neon-agent.analyze",
          "group": "neon-agent"
        }
      ]
    },
    "configuration": {
      "title": "Neon Agent",
      "properties": {
        "neon-agent.apiKey": {
          "type": "string",
          "default": "",
          "description": "API Key for AI service"
        },
        "neon-agent.model": {
          "type": "string",
          "default": "gemini-pro",
          "description": "AI Model to use"
        },
        "neon-agent.autoSuggest": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic code suggestions"
        }
      }
    }
  },
  "scripts": {
    "start": "node src/standalone-server.js",
    "dev": "nodemon src/standalone-server.js",
    "vscode:prepublish": "npm run compile",
    "compile": "echo 'No compilation needed for JavaScript'",
    "watch": "nodemon src/extension.js",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext js",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "eslint": "^8.28.0",
    "nodemon": "^3.1.10"
  },
  "dependencies": {
    "@google/generative-ai": "^0.20.0",
    "axios": "^1.4.0",
    "body-parser": "^1.20.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "morgan": "^1.10.0",
    "ws": "^8.13.0"
  }
}
